{
  "name": "unit-testing",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "makeEnv": "ts-node utils/makeEnv.ts",
    "start:dev": "nodemon --watch ./src --watch .env --ext ts,js,json,env --exec ts-node src/server.ts",
    "start:dev:nohup": "nohup npm run start:dev > ~/Desktop/server.log 2>&1 &",
    "start:ci": "ts-node src/server.ts",
    "test:unit": "jest --coverage --testPathIgnorePatterns='local-server*'",
    "test:local": "jest --coverage --testPathPatterns='local-server.test.ts'",
    "eslint": "eslint --config eslint.config.ts",
    "pipeline:test": "act -j test",
    "pipeline:eslint": "act -j eslint",
    "test:local:allure": "jest --coverage --config jest.config.allure.ts --testPathPatterns='local-server.allure.test.ts' && allure generate reports/allure-results --clean -o reports/allure-report",
    "allure:open:report": "allure open reports/allure-report",
    "ci:test": "start-server-and-test start:ci http://localhost:3000/health test:local",
    "ci:test:allure": "start-server-and-test start:ci http://localhost:3000/health test:local:allure"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/node": "^24.3.1",
    "axios": "^1.11.0",
    "body-parser": "^2.2.0",
    "env-var": "^7.5.0",
    "express": "^5.1.0",
    "moment": "^2.30.1",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@jest/types": "^30.0.5",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "allure-commandline": "^2.34.1",
    "colors": "^1.4.0",
    "commitlint": "^19.8.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.35.0",
    "jest": "^30.1.1",
    "jest-allure2-reporter": "^2.2.6",
    "nodemon": "^3.1.10",
    "start-server-and-test": "^2.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
